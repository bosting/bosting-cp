- breadcrumb @rails_server

= link_to_back rails_servers_path

= form_wrapper(t("actions.rails_server.#{action}")) do
  = permitted_nested_form_for(@rails_server, options_for_horizontal_form) do |f|
    = f.error_notification
    = f.input :name
    = f.input :hostname
    = f.association :user
    = field_set_tag t('headers.rails_server_aliases') do
      = f.simple_fields_for :rails_server_aliases do |g|
        = g.label :name, class: 'control-label'
        .input-group
          = g.text_field :name, class: 'form-control'
          %span.input-group-addon= g.link_to_remove admin_icon(:destroy)
      - if f.editable_field?(:rails_server_aliases)
        = f.link_to_add('Добавить', :rails_server_aliases)
    = f.button :submit
